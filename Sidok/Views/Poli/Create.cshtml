@model Entity.PoliModel

<h1>Create Poli</h1>

<h4>Poli</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nama_poli" class="control-label"></label>
                <input asp-for="nama_poli" class="form-control" />
                <span asp-validation-for="nama_poli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lokasi" class="control-label"></label>
                <input asp-for="lokasi" class="form-control" />
                <span asp-validation-for="lokasi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#selectSpesialisasi').select2({
                placeholder: "-- Pilih Spesialisasi --",
                allowClear: true
            });
        });
    </script>
}
